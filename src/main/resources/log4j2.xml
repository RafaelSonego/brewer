<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  	<!-- for example, if level is Warn will contain WARN, ERROR and FATAL -->
	<!-- OFF -->
	<!-- FATAL -->
	<!-- ERROR -->
	<!-- WARN -->
	<!-- INFO -->
	<!-- DEBUG -->
	<!-- TRACE -->
	<!-- ALL -->
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
    <logger name="com.rafaelsonego.brewer.controller" level="error"></logger>
    <logger name="org.hibernate.SQL" level="debug"></logger>
  </Loggers>
</Configuration>